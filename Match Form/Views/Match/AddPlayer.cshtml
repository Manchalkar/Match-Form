@model Match_Form.Models.Player

@{
    ViewData["Title"] = "Player";
    List<string> player = new List<string>() { "All Rounder" , "Batsman" , "Bowler"};
    List<string> team = new List<string>() { "India", "Austrila", "England" , "Pakistan" , "Bangladesh" , "Sri-Lanka"  };
    List<string> name = new List<string>() { "Virat Kholi", "Shikar Dhawan", "Rohit Sharma", "Bhumra", "Adam Zampa", "Kane Richardson" , "Navdeep Sani" , "AB de Villers"};
}



<div class="modal-header">
    <h5 class="modal-title" id="exampleModalCenterTitle">Add Player</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
   @* <div class="row">
        <div class="col-md-4">*@
            <form asp-action="Create" id="addplayer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="Name" class="form-control" asp-items="new SelectList(name)"></select>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Type" class="control-label"></label> 
                    </div>
                    <div class="col-md-8">
                        <select asp-for="Type" class="form-control" asp-items="new SelectList(player)" ></select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div> 
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Position" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Position" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label asp-for="Team" class="control-label"></label>
                    </div>
                    <div class="col-md-8">
                        <select asp-for="Team" class="form-control" asp-items="new SelectList(team)"></select>
                        <span asp-validation-for="Team" class="text-danger"></span>
                    </div>
                </div>
</form>
    @*     </div>
    </div>*@
</div>
<div class="modal-footer form-group">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    <input type="submit" value="Add Player" form="addplayer" class="btn btn-primary" />
</div>




